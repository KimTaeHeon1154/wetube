extends layouts/main
//- layouts 폴더의 main.pug를 복붙해 온다는 뜻이다. 해당 레이아웃을 사용할 수 있다.

//- block 태그 안에 내용 추가하기!
block content
    .video-detail__container
        .video__player
            //- 동영상 플레이어 부분
            video(src=`/${video.fileUrl}`)
        .video__info
            a(href=routes.editVideo(video.id))
                button Edit Video
            //- routes.js의 editVideo 함수가 실행되고, 인자는 id가 되어, 해당 id를 가지는 동영상을 수정하는 페이지로 넘어가네!
            h5.video__title=video.title
            p.video__description=video.description
            if video.views === 1
                span.video__views 1 view
            else
                span.video__views #{video.views} views
        .video__comments
            if video.comments.length === 1
                span.video__comments-number 1 comment
            else
                span.video__comments-number #{video.comments.length} comments